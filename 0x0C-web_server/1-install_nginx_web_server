#!/usr/bin/env bash
# installing  Nginx web server
apt-get update -y
apt-get -y install nginx -y
sudo apt-get install ufw
ufw allow 'Nginx HTTP'
mv /var/www/html/index.nginx-micah.html /var/www/html/save_index.nginx-micah.html
echo "54.162.6.230{
    listen 80; {
        echo 'Hello World!';
    }
}" > /var/www/html/index.nginx-micah.html
/etc/init.d/nginx start
